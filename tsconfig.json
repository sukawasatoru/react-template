{
  "compilerOptions": {
    "target": "esnext",
    "module": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "sourceMap": true,
    "rootDirs": [
      "src",
      "stories"
    ],
    "baseUrl": "src",
    "newLine": "LF",
    "noEmit": true,
    "strict": true
  },
  "include": [
    "src/**/*"
  ]
}
